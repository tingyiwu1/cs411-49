generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String       @id
  email       String       @unique
  displayName String
  createdAt   DateTime     @default(now())
  assessments Assessment[]
}

model Assessment {
  id        String   @id @default(uuid())
  userId    String
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
